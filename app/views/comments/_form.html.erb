<p>Add a public comment</p>

<% if current_author && current_author.banned == false %>
  <%= form_for([@post, @post.comments.build]) do |f|%>
    <p><strong>Text comment:</strong>
      <%= f.text_area(:body, {:class => 'form-control'}) %>
    </p>
    <div class="btn-group btn-group-toggle" data-toggle="buttons">
      <%= f.submit 'Comment', class: 'btn btn-success' %>
    </div>
  <%end%>

<%else%>

  <% if current_author == nil || current_author.banned == false %>
    <p>Please login to post a comment!</p>
  <%else%>
    <p>Your account is banned!</p>
  <% end %>
<% end %>
