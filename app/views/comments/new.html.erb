<%= form_with(model: [ @post, @post.comments.build ], local: true) do |f| %>
  <%= f.hidden_field :parent_id, value: params[:parent_id] %>
  <div class="form-group row">
    <%= f.label :body,"Add comment", class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_area :body, class:"form-control" %>
    </div>
  </div>
  <div class="actions" style="padding-bottom: 5%">
    <%= f.submit  class:"btn btn-outline-success" %>
  </div>
<% end %>
