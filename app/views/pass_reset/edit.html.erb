<br><br><br>
<div class=" container w-50 p-3 ">
  <div class="card">
    <%= form_for @author, :url => pass_reset_path(params[:id]) do |f| %>
      <% if @author.errors.any? %>
        <div class="alert alert-danger">
          <h2 >Form is invalid</h2>
          <ul>
            <% for message in @author.errors.full_messages %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <h2 class="card-title text-center mb-4 mt-1">Password Recovery</h2>

      <div class="form-group">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
          </div>
          <%= f.password_field :password,
              type: "password",
              class: "form-control",
              id: "password",
              placeholder: "Password" %>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
          </div>
          <%= f.password_field :password_confirmation,
              type: "password", class: "form-control",
              id: "password",
              placeholder: "Confirm password"  %>
        </div>
      </div>

      <div class="form-group">
        <div class="text-center form-group form"><%= f.submit "Update Password", class: "btn btn-warning btn-block" %></div>
      </div>
    <% end %>
  </div>
</div>
