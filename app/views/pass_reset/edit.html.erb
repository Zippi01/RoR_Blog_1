<div class="container">
  <%= form_for @author, :url => pass_reset_path(params[:id]) do |f| %>
    <% if @author.errors.any? %>
      <div class="alert alert-danger">
        <h2>Form is invalid</h2>
        <ul>
          <% for message in @author.errors.full_messages %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <h1>Password Recovery</h1>
    <div class="form-group">
      <%= f.password_field :password, type: "password", class: "form-control", id: "password", placeholder: "Enter password" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, type: "password", class: "form-control", id: "password", placeholder: "Confirm password"  %>
    </div>

    <div class="text-center">
      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>