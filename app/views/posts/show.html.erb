<div class="container, alert alert-secondary">
  <h1 align="center">Show</h1>
  <div class="list-group-item px-20" style = "border-radius: 10px">
    <p>
      <strong>Author:</strong>
      <%= full_name(@post) %>
    </p>
    <p>
      <strong>Title:</strong>
      <%= @post.title %>
    </p>
    <p>
      <strong>Content:</strong>
      <%= @post.content %>
    </p>
    <p>
      <strong>Image:</strong><br>
      <%= image_tag @post.image, width: '50%' %>
    </p>
    <p>
      <%= distance_of_time_in_words(Time.now.hour, Time.now-@post.created_at) %>
    </p>
    <div class="pjax-container">
      <div class="btn-group btn-group-toggle" data-toggle="buttons">
        <% if current_author %>
        <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-secondary' %>
        <%end%>
        <%= link_to 'Back', posts_path, class: 'btn btn-dark' %>
      </div>
    </div>

    <br>
    <br>
    <br>

    <h5>Comments</h5>
    <% @post.comments.each do |comment| %>
    <div class="alert alert-light">
      <div title = "<%= comment.created_at%>"><strong><%= Author.find_by_id(comment.author_id).first_name %></strong>: <%= comment.body %>
        <br>
        <%= distance_of_time_in_words(Time.now.hour, Time.now-comment.created_at) %>
        <% if comment.created_at != comment.updated_at%>
          <i class="far fa-edit"></i>
        <% end %>
        <% if current_author && current_author.id == comment.author_id && Time.now - comment.created_at < 1.hour%>
          <p><%= link_to 'Edit', edit_post_comment_path(@post, comment), class: 'btn btn-secondary btn-sm' %></p>
        <% end %>
      </div>
    </div>
    <% end %>

    <p>Add a public comment</p>
    <% if current_author %>
      <%= form_for([@post, @post.comments.build]) do |f|%>
        <p><strong>Text comment:</strong>
          <%= f.text_area(:body, {:class => 'form-control'}) %>
        </p>
        <div class="btn-group btn-group-toggle" data-toggle="buttons">
          <%= f.submit 'Comment', class: 'btn btn-success' %>
        </div>
      <%end%>

      <%else%>

        <p>Please login to post a comment</p>
    <% end %>
  </div>
</div>
