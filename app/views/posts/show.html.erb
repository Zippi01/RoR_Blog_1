<br><br><br>
<div class = "container alert alert-warning text-dark ">
  <h1 align = "center">Show</h1>

  <div class = "list-group-item px-20" style = "border-radius: 10px">

    <p class = "fas fa-user"> <%= full_name(@post) %></p>

    <p>
      <strong>Title:</strong>
      <%= @post.title %>
    </p>
    <p>
      <strong>Content:</strong>
      <%= @post.content %>
    </p>

      <p><%= image_tag @post.image, width: '50%', style: "border-radius: 10px" %></p>

      <p class = "fas fa-calendar-alt"></p> <%= @post.created_at%>

    <div class = "pjax-container">
      <div class = "btn-group btn-group-toggle" data-toggle = "buttons">
        <% if current_author &&
              current_author.id == @post.author_id &&
              current_author.banned == false%>
          <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-outline-secondary' %>
        <%end%>
          <%= link_to 'Back', posts_path, class: 'btn btn-outline-dark' %>
      </div>
    </div>

    <br>
    <br>
    <br>

    <h5>Comments</h5>
      <div class = "new_comment" id = "new_comment">
        <%= nested_comments @post.comments.arrange(order: :created_at)%>
      </div>
      <%= render 'comments/form' %>
  </div>
</div>

<style media="screen">
  .nested_comments {
    margin-left: 30px;
  }
</style>
