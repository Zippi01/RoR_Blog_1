<div class=" alert alert-secondary ">
  <head>
    <h1 align="center">Posts</h1>
  </head>
  <body>
    <% @posts.each do |post| %>
      <div class="list-group-item px-20" style = "border-radius: 10px" >

        <h5>Anthor</h5>
          <p><%= full_name(post) %></p>

        <h5>Title</h5>
          <p><%= post.title %></p>

        <h5>Content</h5>
          <p><%= post.content %></p>

        <div class="pjax-container">
          <p class="far fa-eye"> <%= post.impressions_count %></p><br>
          <div class="btn-group btn-group-toggle" data-toggle="buttons">
            <%= link_to 'Show', post , class: 'btn btn-success'%>

            <% if current_author &&
                  current_author.id == post.author_id &&
                  current_author.banned == false %>

              <%= link_to 'Edit',
                  edit_post_path(post),
                  class: 'btn btn-secondary' %>
              <%= link_to 'Destroy',
                  post,
                  method: :delete,
                  data: { confirm: 'Are you sure?' },
                  class: 'btn btn-dark'%>
            <% end %>
          </div>
        </div>
      </div>
      <br>
    <% end %>
  </body>
</div>
